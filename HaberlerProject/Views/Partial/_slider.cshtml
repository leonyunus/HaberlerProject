
@using HaberlerProject.Models.ViewModel;

@model List<ProductVM>

    
    <div id="owl-carousel-1" class="owl-carousel owl-theme center-owl-nav">

        @{

            foreach (var item in Model)
            {
                <article class="article thumb-article">

                    <div class="article-img">
                        <img src="@item.ListImageUrl" alt="@item.Name">
                    </div>
                    <div class="article-body">
                        <ul class="article-info">
                            <li class="article-category"><a>SON  DAKİKA</a></li>
                        </ul>
                        
                        <h2 class="article-title"><a href="/Home/Details/@item.Id">@item.Name</a></h2>
                        <ul class="article-meta">
                            <li><i class="fa fa-clock-o"></i> @item.CreateDate.ToString("dd.MM.yyyy")</li>
                        </ul>
                    </div>
                </article>
         
            }
        }


    </div>


